using namespace std;

float devprecio(float a);
void main()
{
	float precio,b;
	cout<<"Ingresar el precio: ";
	cin>>precio;
	b=devprecio(precio);
	cout<<"El precio es: "<<b<<endl;
	getch();
}

float devprecio(float a)
{
	float IVA=0.13;
	float iva2,nuevprecio,d;
	d=a;
	iva2=a*IVA;
	nuevprecio=d+iva2;
	return(nuevprecio);
}
